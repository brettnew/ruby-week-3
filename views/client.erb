<% if @clients.any?() %>
<h3>Click on a client to see or update their information:</h3>

<ul>
  <% @clients.each do |client| %>
  <li><a href="/clients/<%= client.id() %>"><%= client.name() %></a></li>
  <% end %>
</ul>
<% else %>
<h3>There are no clients yet! Add a new client to their stylist!</h3>
<% end %>

<h4><a href="/stylists/view">View All Stylists</a></h4>
<h4><a href="/">Home</a></h4>
